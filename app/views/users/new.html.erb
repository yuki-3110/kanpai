
<h6>アカウント登録</h6>

<% if @user.errors.any?%>
  <div id= "error_explanation">
    <h2><%= pluralize(@user.errors.count,"error") %> prohibited this <%= user.name%> from being saved:</h2>
    <ul>
      <% @user.errors.full_massages.each do |massage| %>
      <li><%= massage %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<%=form_with(model: @user, local: true) do |f|%>
  <%= f.label :ユーザー名 %>
  <%= f.text_field :name %>

  <%= f.label :メールアドレス %>
  <%= f.email_field :email %>

  <%= f.label :パスワード %>
  <%= f.password_field :password %>
  <br>
  <h6>半角英数字6桁以上でご入力ください</h6>

  <%= f.label :パスワード再確認 %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :プロフィール画像 %>
  <%= f.password_field :image %>

  <%= f.submit"アカウント登録"%>

<% end %>

